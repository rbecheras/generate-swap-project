---
layout: false
rename:
  basename: 'package.json'
---
{
  "name": "<%= ask('name') %>",
  "description": "<%= escapeQuotes(ask('description')) %>",
  "version": "<%= ask('version', {default: '0.1.0'}) %>",
  "homepage": "<%= ask('homepage') %>",
  "author": "<%= ask('author.name') %> (<%= ask('author.url') %>)",
  "repository": "<%= ask('repository') %>",
  "bugs": {
    "url": "<%= ask('issues') %>"
  },
  "engines": {
    "node": ">=4"
  },
  "license": "<%= ask('license', {default: 'MIT'}) %>",
  "main": "<%= ask('mainFile', {default: 'index.js'}) %>",
  "files": [
    "index.js",
    "LICENSE",
    "README.md",
    "dist/",
    "package.json",
    "yarn.lock"
  ],
  "scripts": {
    "test": "mocha"
  },
  "keywords": []
}
